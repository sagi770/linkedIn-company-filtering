{
  "name": "Linkedin Filter Companies",
  "author": "Sagi Tawil",
  "description": "A small filter option to hide or mark company in linkedin",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Linkedin Filter Companies",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["storage", "activeTab"]
}
